# Application Settings
APP_NAME=SENTINEL
APP_VERSION=1.0.0
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/sentinel
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Scanning Configuration
MAX_CONCURRENT_SCANS=5
SCAN_TIMEOUT_SECONDS=3600
RATE_LIMIT_REQUESTS_PER_MINUTE=60
MAX_SCAN_DEPTH=3

# Security Settings
REQUIRE_CONSENT=True
ALLOW_ACTIVE_SCANNING=False
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# External API Keys (Optional)
SHODAN_API_KEY=
VIRUSTOTAL_API_KEY=
VULNERS_API_KEY=
NVD_API_KEY=

# Notification Settings
WEBHOOK_URL=
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# Storage
REPORTS_DIR=./reports
SCAN_RESULTS_DIR=./scan_results
LOG_DIR=./logs

# Docker/Container Settings
CONTAINER_ISOLATION=True
DOCKER_NETWORK=sentinel_network

# Feature Flags
ENABLE_AUTHENTICATED_SCANNING=True
ENABLE_INJECTION_TESTING=False
ENABLE_OSINT_MODULES=True
ENABLE_CVE_MAPPING=True
